<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li class="active"><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>

    <% @likes.each do |like| %>
    <% post = Post.find_by(id: like.post_id) %>
    <div class="posts-index-item">
      <div class="post-head">
        <a href="<%= "/users/#{post.user_id}" %>">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
          <p><%= post.user.name %></p>
        </a>
      </div>
      <div class="post-body">
        <a href="<%= "/posts/#{post.id}" %>">
          <img src="<%= "/post_images/#{post.id}.jpg" %>">
          <p>
            <%= post.comment %>
          </p>
        </a>
        <div class="tag">
          <% tag = Tag.find_by(post_id: post.id) %>
          <% if tag.bird %><%= link_to("bird", "/posts/index") %><% end %>
          <% if tag.cat %><%= link_to("cat", "/posts/index") %><% end %>
          <% if tag.dog %><%= link_to("dog", "/posts/index") %><% end %>
          <% if tag.horse %><%= link_to("horse", "/posts/index") %><% end %>
          <% if tag.sheep %><%= link_to("sheep", "/posts/index") %><% end %>
          <% if tag.cow %><%= link_to("cow", "/posts/index") %><% end %>
          <% if tag.elephant %><%= link_to("elephant", "/posts/index") %><% end %>
          <% if tag.bear %><%= link_to("bear", "/posts/index") %><% end %>
          <% if tag.zebra %><%= link_to("zebra", "/posts/index") %><% end %>
          <% if tag.giraffe %><%= link_to("giraffe", "/posts/index") %><% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
