<div class="main devise">
  <div class="container w-50">
    <div class="form">
      <div class="form-body">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :image, "画像（変更を希望しない場合選択不要）" %><br />
            <%= f.file_field :image %>
          </div>
          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="field">
            <%= f.label :description %><br />
            <%= f.text_area :description, rows: 10 %>
          </div>
          <div class="field">
            <%= f.label :tag_ids, "フォローするタグ" %>
            <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |tag| %>
              <div class="form-check">
                <%= tag.label class: "form-check-label" do %>
                  <%= tag.check_box class: "form-check-input" %>
                  <%= tag.text %>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="field">
            <%= f.label :password, "新しいパスワード（変更を希望しない場合入力不要）" %>
            <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, "新しいパスワードの再入力（変更を希望しない場合入力不要）" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="field">
            <%= f.label :current_password %>
            <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
          <div class="actions">
            <%= f.submit "保存" %>
          </div>
        <% end %>
      </div>
      <div class="devise-links delete">
        <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "削除されたアカウントを復元することはできません。\n投稿などはすべて削除されます。\nアカウントを本当に削除しますか？" }, method: :delete %>
        <%= link_to "前のページに戻る", :back %>
      </div>
    </div>
  </div>
</div>
