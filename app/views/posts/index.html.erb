<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
    <div class="posts-index-item">
      <div class="post-head">
        <a href="<%= "/users/#{post.user_id}" %>">
          <img src="<%= post.user.image_name %>">
          <p><%= post.user.name %></p>
        </a>
      </div>

      <div class="post-body">
        <a href="<%= "/posts/#{post.id}" %>">
          <img src="<%= post.image_name %>">
          <p>
            <%= post.comment %>
          </p>
        </a>
        <div class="tag">
          <% if post.tag.bird %><%= link_to("トリ", "/posts/tags/bird") %><% end %>
          <% if post.tag.cat %><%= link_to("ネコ", "/posts/tags/cat") %><% end %>
          <% if post.tag.dog %><%= link_to("イヌ", "/posts/tags/dog") %><% end %>
          <% if post.tag.horse %><%= link_to("ウマ", "/posts/tags/horse") %><% end %>
          <% if post.tag.sheep %><%= link_to("ヒツジ", "/posts/tags/sheep") %><% end %>
          <% if post.tag.cow %><%= link_to("ウシ", "/posts/tags/cow") %><% end %>
          <% if post.tag.elephant %><%= link_to("ゾウ", "/posts/tags/elephant") %><% end %>
          <% if post.tag.bear %><%= link_to("クマ", "/posts/tags/bear") %><% end %>
          <% if post.tag.zebra %><%= link_to("シマウマ", "/posts/tags/zebra") %><% end %>
          <% if post.tag.giraffe %><%= link_to("キリン", "/posts/tags/giraffe") %><% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="sub-menu">
    <div class="sub-menu-item">
      <%= form_tag("/posts/search", {method: "get"}) do %>
      <%= text_field_tag(:keyword) %>
      <%= submit_tag("検索") %>
      <% end %>
      <div class="topics">
        <h2>ランキング</h2>
        <%= link_to("全投稿のいいねランキング", "/posts/ranking/all", {class: @active_list[:all]}) %>
        <%= link_to("今月のランキング", "/posts/ranking/monthly", {class: @active_list[:monthly]}) %>
        <%= link_to("今週のランキング", "/posts/ranking/weekly", {class: @active_list[:weekly]}) %>
        <%= link_to("今日のランキング", "/posts/ranking/daily", {class: @active_list[:daily]}) %>
        <h2>タグ</h2>
        <%= link_to("トリ", "/posts/tags/bird", {class: @active_list[:bird]}) %>
        <%= link_to("ネコ", "/posts/tags/cat", {class: @active_list[:cat]}) %>
        <%= link_to("イヌ", "/posts/tags/dog", {class: @active_list[:dog]}) %>
        <%= link_to("ウマ", "/posts/tags/horse", {class: @active_list[:horse]}) %>
        <%= link_to("ヒツジ", "/posts/tags/sheep", {class: @active_list[:sheep]}) %>
        <%= link_to("ウシ", "/posts/tags/cow", {class: @active_list[:cow]}) %>
        <%= link_to("ゾウ", "/posts/tags/elephant", {class: @active_list[:elephant]}) %>
        <%= link_to("クマ", "/posts/tags/bear", {class: @active_list[:bear]}) %>
        <%= link_to("シマウマ", "/posts/tags/zebra", {class: @active_list[:zebra]}) %>
        <%= link_to("キリン", "/posts/tags/giraffe", {class: @active_list[:giraffe]}) %>
      </div>
    </div>
  </div>
</div>
