<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-head">
        <a href="<%= "/users/#{@post.user_id}" %>">
          <img src="<%= "/user_images/#{@post.user.image_name}" %>">
          <p><%= @post.user.name %></p>
        </a>
      </div>
      <div class="post-body">
        <img src="<%= "/post_images/#{@post.id}.jpg" %>">
        <p>
          <%= @post.comment %>
        </p>
        <div class="tag clearfix">
          <% if @tag.bird %><%= link_to("bird", "/posts/tags/bird") %><% end %>
          <% if @tag.cat %><%= link_to("cat", "/posts/tags/cat") %><% end %>
          <% if @tag.dog %><%= link_to("dog", "/posts/tags/dog") %><% end %>
          <% if @tag.horse %><%= link_to("horse", "/posts/tags/horse") %><% end %>
          <% if @tag.sheep %><%= link_to("sheep", "/posts/tags/sheep") %><% end %>
          <% if @tag.cow %><%= link_to("cow", "/posts/tags/cow") %><% end %>
          <% if @tag.elephant %><%= link_to("elephant", "/posts/tags/elephant") %><% end %>
          <% if @tag.bear %><%= link_to("bear", "/posts/tags/bear") %><% end %>
          <% if @tag.zebra %><%= link_to("zebra", "/posts/tags/zebra") %><% end %>
          <% if @tag.giraffe %><%= link_to("giraffe", "/posts/tags/giraffe") %><% end %>
        </div>
        <div class="post-time">
          <%= @post.created_at %>
        </div>

        <% if @current_user %>
        <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
        <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
        <% else %>
        <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
        <span class="fa fa-heart like-btn"></span>
        <% end %>
        <% end %>
        <% else %>
        <span class="fa fa-heart like-btn-no-hover"></span>
        <% end %>
        <p class="likes-count">
          <%= @likes_count %>
        </p>
        <% if @current_user %>
        <% if @post.user_id == @current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", "/posts/#{@post.id}/edit") %>
          <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>

    <% if @current_user %>
    <div class="posts-show-item">
      <%= form_tag("/replies/#{@post.id}/create", {multipart: true}) do %>
      <div class="form-body">
        <% @reply.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
        <% end %>

        <textarea name="comment"><%= @reply.comment %></textarea>
        <input type="submit" value="リプライ">
      </div>
      <% end %>
    </div>
    <% end %>

    <% @replies.each do |reply| %>
    <div class="posts-show-item">
      <div class="reply-head">
        <a href="<%= "/users/#{reply.user_id}" %>">
          <img src="<%= "/user_images/#{reply.user.image_name}" %>">
          <p><%= reply.user.name %></p>
        </a>
      </div>
      <div class="reply-body">
        <p>
          <%= reply.comment %>
        </p>
        <% if @current_user %>
        <% if reply.user_id == @current_user.id %>
        <div class="reply-menus">
          <%= link_to("編集", "/replies/#{reply.id}/edit") %>
          <%= link_to("削除", "/replies/#{reply.id}/destroy", {method: "post"}) %>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
