<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-head">
        <a href="<%= "/users/#{@post.user_id}" %>">
          <img src="<%= "/user_images/#{@post.user.image_name}" %>">
          <p><%= @post.user.name %></p>
        </a>
      </div>
      <div class="post-body">
        <img src="<%= "/post_images/#{@post.id}.jpg" %>">
        <p>
          <%= @post.comment %>
        </p>
        <div class="tag clearfix">
          <% if @tag.bird %><%= link_to("bird", "/posts/index") %><% end %>
          <% if @tag.cat %><%= link_to("cat", "/posts/index") %><% end %>
          <% if @tag.dog %><%= link_to("dog", "/posts/index") %><% end %>
          <% if @tag.horse %><%= link_to("horse", "/posts/index") %><% end %>
          <% if @tag.sheep %><%= link_to("sheep", "/posts/index") %><% end %>
          <% if @tag.cow %><%= link_to("cow", "/posts/index") %><% end %>
          <% if @tag.elephant %><%= link_to("elephant", "/posts/index") %><% end %>
          <% if @tag.bear %><%= link_to("bear", "/posts/index") %><% end %>
          <% if @tag.zebra %><%= link_to("zebra", "/posts/index") %><% end %>
          <% if @tag.giraffe %><%= link_to("giraffe", "/posts/index") %><% end %>
        </div>
        <div class="post-time">
          <%= @post.created_at %>
        </div>
        <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
        <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
        <% else %>
        <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
        <span class="fa fa-heart like-btn"></span>
        <% end %>
        <% end %>
        <%= @likes_count %>
        <% if @post.user_id == @current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", "/posts/#{@post.id}/edit") %>
          <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
