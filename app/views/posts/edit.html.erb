<div class="main posts-edit">
  <div class="container w-50">
    <%= form_with model: @post do |f| %>
      <div class="form-body">
        <%= render partial: "share/error", locals: { error_messages: @post.errors.full_messages } %>
        <%= f.label :image, "画像" %>
        <%= f.file_field :image, class: "mb-2" %>
        <%= f.label :comment, "コメント" %>
        <%= f.text_area :comment, rows: 10, class: "mb-3" %>
        <%= f.submit "投稿" %>
      </div>
    <% end %>
  </div>
</div>
