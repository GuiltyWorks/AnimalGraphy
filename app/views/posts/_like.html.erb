<% if user_signed_in? %>
  <% if Like.find_by(user_id: current_user.id, post_id: post_id) || @liked %>
    <%= link_to like_path(id: post_id), method: :delete, remote: true do %><i class="fa fa-heart unlike-btn" aria-hidden="true"></i><% end %>
  <% else %>
    <%= link_to likes_path(id: post_id), method: :post, remote: true do %><i class="fa fa-heart like-btn" aria-hidden="true"></i><% end %>
  <% end %>
<% else %>
  <i class="fa fa-heart like-btn-no-hover" aria-hidden="true"></i>
<% end %>
<p class="likes-count"><%= likes_count %></p>
