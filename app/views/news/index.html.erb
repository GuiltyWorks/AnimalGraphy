<div class="main news-index">
  <div class="container row w-75">
    <div class="main-menu col-9">
      <% @news_list.each do |news| %>
        <div class="news-index-item bg-white shadow p-3 mb-3">
          <a href="<%= news["link"] %>" target="_blank" rel="noopener noreferrer">
            <img src="<%= LinkThumbnailer.generate(news["link"]).images.first.src.to_s %>" class="float-left">
            <p class="text-primary"><%= news["title"] %></p>
          </a>
        </div>
      <% end %>
      <div class="pagenate mb-5">
        <%= paginate @news_list %>
      </div>
    </div>
    <div class="sub-menu col-3">
      <div class="sub-menu-item sidebar_fixed">
        <div class="topics">
          <div class="list-group">
            <%= link_to "動物", "/news/general", class: "#{@active_list["general"]} text-decoration-none list-group-item list-group-item-action" %>
            <% Tag.all.each do |tag| %>
              <%= link_to tag.name, "/news/#{tag.id}", class: "#{@active_list[tag.id.to_s]} text-decoration-none list-group-item list-group-item-action" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
